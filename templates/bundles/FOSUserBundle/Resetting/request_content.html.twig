{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="form-group field-text">
        <label for="username" class="sr-only form-control-label required">{{ 'resetting.request.username'|trans }}</label>
        <div class="form-widget form-widget-with-icon">
            <i class="fa fa-fw fa-user"></i>
            <input type="text" id="username" name="username" class="form-control" placeholder="{{ _username_label }}" required autofocus>
        </div>
    </div>
    <div class="form-group field-button">
        <button type="submit" class="btn btn-primary btn-lg btn-block" onclick="this.form.submit(); this.disabled=true;">{{ 'resetting.request.submit'|trans }}</button>
    </div>
</form>
